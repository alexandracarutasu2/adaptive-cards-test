{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "Image",
                    "style": "Person",
                    "url": "${profile-picture}",
                    "id": "profile-picture"
                }
            ],
            "id": "upper-container"
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${name}",
                    "wrap": true,
                    "id": "name"
                }, {
                    "type": "Image",
                    "url": "${logo}",
                    "altText": "{company-logo}",
                    "id": "tenant-logo"
        }

            ],
            "id": "lower-container"
        }
    ]
}